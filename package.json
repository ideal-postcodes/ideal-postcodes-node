{
  "name": "ideal-postcodes",
  "version": "2.0.0",
  "description": "UK Postcode lookup API. Wrapper for Ideal-Postcodes.co.uk API uses Royal Mail's Postcode Address File (PAF).",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://ideal-postcodes.co.uk/",
  "scripts": {
    "test": "NODE_ENV=test node_modules/.bin/nyc node_modules/.bin/mocha --opts mocha.opts",
    "build": "node_modules/.bin/tsc",
    "coverage": "node_modules/.bin/nyc report --reporter=text-lcov | node_modules/.bin/coveralls || true",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ideal-postcodes/ideal-postcodes-node.git"
  },
  "keywords": [
    "UK",
    "Addressing",
    "Royal",
    "Mail",
    "PAF"
  ],
  "nyc": {
    "include": [
      "lib/**/*.ts",
      "lib/**/*.js"
    ],
    "exclude": [
      "dist/*",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "all": true
  },
  "engines": {
    "node": ">=8.9"
  },
  "author": "Ideal Postcodes",
  "license": "MIT",
  "readmeFilename": "README.md",
  "dependencies": {
    "lodash": "~4.17.11",
    "qs": "~6.6.0"
  },
  "devDependencies": {
    "@types/node": "~10.12.18",
    "@types/chai": "~4.1.7",
    "@types/mocha": "~5.2.5",
    "chai": "~4.2.0",
    "coveralls": "~3.0.2",
    "express": "~4.16.4",
    "mocha": "~5.2.0",
    "nock": "~10.0.6",
    "nyc": "~13.1.0",
    "ts-node": "~8.0.1",
    "tslint": "~5.12.1",
    "typescript": "~3.2.4"
  }
}
